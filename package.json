{
  "name": "ocpipe",
  "version": "0.3.5",
  "description": "SDK for LLM pipelines with OpenCode and Zod",
  "type": "module",
  "main": "src/index.ts",
  "types": "src/index.ts",
  "repository": {
    "type": "git",
    "url": "git+https://github.com/s4wave/ocpipe.git"
  },
  "homepage": "https://github.com/s4wave/ocpipe",
  "bugs": {
    "url": "https://github.com/s4wave/ocpipe/issues"
  },
  "license": "MIT",
  "author": "s4wave",
  "keywords": [
    "dspy",
    "llm",
    "opencode",
    "typescript",
    "ai",
    "workflow",
    "pipeline",
    "bun"
  ],
  "engines": {
    "bun": ">=1.0.0"
  },
  "dependencies": {
    "opencode-ai": "1.1.20"
  },
  "peerDependencies": {
    "zod": "4.3.5"
  },
  "devDependencies": {
    "@eslint/js": "^9.39.2",
    "bun-types": "^1.3.5",
    "eslint": "^9.39.2",
    "globals": "^17.0.0",
    "jiti": "^2.6.1",
    "prettier": "^3.7.4",
    "typescript": "^5.0.0",
    "typescript-eslint": "^8.52.0",
    "@typescript/native-preview": "^7.0.0-dev.20251226.1",
    "vitest": "^4.0.0"
  },
  "scripts": {
    "lint": "eslint .",
    "format": "bun run prettier --write .",
    "typecheck": "tsgo --noEmit",
    "test": "vitest run",
    "test:watch": "vitest",
    "release": "npm run release:version && npm run release:commit",
    "release:minor": "npm run release:version:minor && npm run release:commit",
    "release:version": "npm version patch -m \"release: v%s\" --no-git-tag-version",
    "release:version:minor": "npm version minor -m \"release: v%s\" --no-git-tag-version",
    "release:commit": "git reset && git add package.json && git commit -s -m \"release: v$(node -p \"require('./package.json').version\")\" && git tag v$(node -p \"require('./package.json').version\")",
    "release:publish": "git push && git push --tags"
  },
  "files": [
    "src/",
    "!src/*.test.ts",
    "example/",
    "llms.txt",
    "README.md",
    "LICENSE",
    "GETTING_STARTED.md",
    "DESIGN.md"
  ]
}
